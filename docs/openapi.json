  "info": {
    "title": "TaskFlow Api",
    "description": "API description",
    "version": "1.0",
    "contact": {}
  },
  "tags": [],
  "servers": [],
  "components": {
    "schemas": {
      "SignUpRequestDTO": {
        "type": "object",
        "properties": {
          "email": { "type": "string", "example": "user@example.com" },
          "password": { "type": "string", "example": "StrongP@ssw0rd" },
          "first_name": { "type": "string", "example": "John" },
          "last_name": { "type": "string", "example": "Doe" },
          "phone_number": { "type": "string", "example": "+1234567890" },
          "date_of_birth": {
            "format": "date-time",
            "type": "string",
            "example": 915148800
          }
        },
        "required": [
          "email",
          "password",
          "first_name",
          "last_name",
          "phone_number",
          "date_of_birth"
        ]
      },
      "AppResponseDTO": {
        "type": "object",
        "properties": {
          "success": { "type": "boolean" },
          "message": { "type": "string" },
          "data": { "type": "object", "nullable": true }
        },
        "required": ["success", "message", "data"]
      },
      "TokenResponseDTO": {
        "type": "object",
        "properties": {
          "access_token": {
            "type": "string",
            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...",
            "description": "JWT access token"
          },
          "refresh_token": {
            "type": "string",
            "example": "dGhpc2lzYXJlZnJlc2h0b2tlbg==",
            "description": "JWT refresh token"
          }
        },
        "required": ["access_token", "refresh_token"]
      },
      "VerifyOtpRequestDTO": {
        "type": "object",
        "properties": {
          "otp": {
            "type": "string",
            "example": "123456",
            "description": "One-time password code"
          }
        },
        "required": ["otp"]
      },
      "LogInRequestDTO": {
        "type": "object",
        "properties": {
          "email": { "type": "string", "example": "user@example.com" },
          "password": { "type": "string", "example": "StrongP@ssw0rd" }
        },
        "required": ["email", "password"]
      },
      "ProjectStatus": {
        "type": "string",
        "enum": ["NOT_YET", "IN_PROGRESS", "DONE"],
        "description": "Current status of the project"
      },
      "ProjectResponseDTO": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number",
            "example": 1,
            "description": "The unique identifier of the project"
          },
          "name": {
            "type": "string",
            "example": "Mobile App Revamp",
            "description": "Name of the project"
          },
          "description": {
            "type": "string",
            "example": "A project to update the UI/UX of our main app.",
            "description": "A brief description of the project"
          },
          "owner_id": {
            "type": "number",
            "example": 123,
            "description": "The ID of the user who owns the project"
          },
          "status": {
            "description": "Current status of the project",
            "allOf": [{ "$ref": "#/components/schemas/ProjectStatus" }]
          },
          "start_date": {
            "type": "number",
            "example": 1704345731,
            "description": "Project start date as a Unix timestamp (seconds)"
          },
          "end_date": {
            "type": "number",
            "example": 1706937731,
            "description": "Project end date as a Unix timestamp (seconds)"
          },
          "created_at": {
            "type": "number",
            "example": 1704067200,
            "description": "Creation timestamp"
          },
          "updated_at": {
            "type": "number",
            "example": 1704153600,
            "description": "Last update timestamp"
          }
        },
        "required": [
          "id",
          "name",
          "owner_id",
          "status",
          "created_at",
          "updated_at"
        ]
      },
      "AddProjectRequestDTO": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "The name of the project",
            "example": "Mobile App Redesign"
          },
          "description": {
            "type": "string",
            "description": "A brief description of the project",
            "example": "Revamping the user interface for the core mobile application."
          },
          "start_date": {
            "type": "number",
            "description": "Project start date in Unix timestamp (seconds)",
            "example": 1704345731
          },
          "end_date": {
            "type": "number",
            "description": "Project end date in Unix timestamp (seconds)",
            "example": 1706937731
          }
        },
        "required": ["name"]
      },
      "UpdateProjectRequestDTO": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "The name of the project",
            "example": "Mobile App Redesign"
          },
          "description": {
            "type": "string",
            "description": "A brief description of the project",
            "example": "Revamping the user interface for the core mobile application."
          },
          "start_date": {
            "type": "number",
            "description": "Project start date in Unix timestamp (seconds)",
            "example": 1704345731
          },
          "end_date": {
            "type": "number",
            "description": "Project end date in Unix timestamp (seconds)",
            "example": 1706937731
          },
          "status": {
            "type": "string",
            "enum": ["NOT_YET", "IN_PROGRESS", "DONE"],
            "description": "Update the current status of the project",
            "example": "NOT_YET"
          }
        }
      },
      "SearchProjectResponseDTO": {
        "type": "object",
        "properties": {
          "projects": {
            "description": "List of projects matching the search criteria",
            "type": "array",
            "items": { "$ref": "#/components/schemas/ProjectResponseDTO" }
          }
        },
        "required": ["projects"]
      },
      "TaskAttachmentsUploadResponseDTO": {
        "type": "object",
        "properties": {}
      },
      "CreateProjectTaskRequestDTO": { "type": "object", "properties": {} },
      "SearchProjectTaskResponseDTO": { "type": "object", "properties": {} },
      "TaskResponseDTO": { "type": "object", "properties": {} },
      "UpdateTaskRequestDTO": { "type": "object", "properties": {} },
      "BulkAddTaskAttachmentsRequestDTO": { "type": "object", "properties": {} }
    }
  }
}
