      "get": {
        "operationId": "ProjectController_searchProject",
        "parameters": [
          {
            "name": "status",
            "required": false,
            "in": "query",
            "description": "Filter projects by their current status",
            "schema": {
              "type": "string",
              "enum": ["NOT_YET", "IN_PROGRESS", "DONE"]
            }
          },
          {
            "name": "start_date",
            "required": false,
            "in": "query",
            "description": "Filter by start date. Supports single Unix timestamp or range (min,max)",
            "schema": { "example": "1704345731,1706937731", "type": "string" }
          },
          {
            "name": "end_date",
            "required": false,
            "in": "query",
            "description": "Filter by end date. Supports single Unix timestamp or range (min,max)",
            "schema": { "example": "1704345731", "type": "string" }
          },
          {
            "name": "sort",
            "required": false,
            "in": "query",
            "description": "The field to sort the results by",
            "schema": {
              "default": "created_at",
              "example": "name",
              "type": "string"
            }
          },
          {
            "name": "asc",
            "required": false,
            "in": "query",
            "description": "Sort order: true for ascending, false for descending",
            "schema": { "default": false, "example": true, "type": "boolean" }
          }
        ],
        "responses": {
          "200": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    { "$ref": "#/components/schemas/AppResponseDTO" },
