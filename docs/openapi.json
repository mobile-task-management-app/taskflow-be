  "info": {
    "title": "TaskFlow Api",
    "description": "API description",
    "version": "1.0",
    "contact": {}
  },
  "tags": [],
  "servers": [],
  "components": {
    "schemas": {
      "AppResponseDTO": {
        "type": "object",
        "properties": {
          "success": { "type": "boolean" },
          "message": { "type": "string" },
          "data": { "type": "object", "nullable": true }
        },
        "required": ["success", "message", "data"]
      },
      "UserResponseDTO": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number",
            "example": 1,
            "description": "The unique identifier of the user"
          },
          "first_name": {
            "type": "string",
            "example": "John",
            "description": "The first name of the user"
          },
          "last_name": {
            "type": "string",
            "example": "Doe",
            "description": "The last name of the user"
          },
          "email": {
            "type": "string",
            "example": "john.doe@example.com",
            "description": "User email address"
          },
          "phone_number": {
            "type": "string",
            "example": "+1234567890",
            "description": "International phone number"
          },
          "last_login_at": {
            "type": "number",
            "description": "unix timestamp of the last successful login"
          }
        },
        "required": [
          "id",
          "first_name",
          "last_name",
          "email",
          "phone_number",
          "last_login_at"
        ]
      },
      "SignUpRequestDTO": {
        "type": "object",
        "properties": {
          "email": { "type": "string", "example": "user@example.com" },
          "password": { "type": "string", "example": "StrongP@ssw0rd" },
          "first_name": { "type": "string", "example": "John" },
          "last_name": { "type": "string", "example": "Doe" },
          "phone_number": { "type": "string", "example": "+1234567890" },
          "date_of_birth": { "type": "number", "example": 915148800 }
        },
        "required": [
          "email",
          "password",
          "first_name",
          "last_name",
          "phone_number",
          "date_of_birth"
        ]
      },
      "TokenResponseDTO": {
        "type": "object",
        "properties": {
          "access_token": {
            "type": "string",
            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...",
            "description": "JWT access token"
          },
          "refresh_token": {
            "type": "string",
            "example": "dGhpc2lzYXJlZnJlc2h0b2tlbg==",
            "description": "JWT refresh token"
          }
        },
        "required": ["access_token", "refresh_token"]
      },
      "VerifyOtpRequestDTO": {
        "type": "object",
        "properties": {
          "otp": {
            "type": "string",
            "example": "123456",
            "description": "One-time password code"
          }
        },
        "required": ["otp"]
      },
      "LogInRequestDTO": {
        "type": "object",
        "properties": {
          "email": { "type": "string", "example": "user@example.com" },
          "password": { "type": "string", "example": "StrongP@ssw0rd" }
        },
        "required": ["email", "password"]
      },
      "ProjectStatus": {
        "type": "string",
        "enum": ["NOT_YET", "IN_PROGRESS", "DONE"],
        "description": "Current status of the project"
      },
      "ProjectResponseDTO": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number",
            "example": 1,
            "description": "The unique identifier of the project"
          },
          "name": {
            "type": "string",
            "example": "Mobile App Revamp",
